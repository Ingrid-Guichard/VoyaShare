<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.iguichar.voyashare.PageGarde"
    android:id="@+id/mainLayout">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="217dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nameapp"
        tools:layout_editor_absoluteX="89dp"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/inscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inscription"
        android:background="@color/colorWhite"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="216dp"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/connexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connexion"
        android:background="@color/colorWhite"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="327dp"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/inscription"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/recherchetrajet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:text="Rechercher un trajet"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="453dp"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="214dp"
        android:layout_height="2dp"
        android:layout_marginBottom="55dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/inscription"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_editor_absoluteX="85dp"
        android:background="@color/colorDark"
        android:layout_above="@+id/inscription"
        android:layout_alignEnd="@+id/imageView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="185dp"
        android:layout_height="2dp"
        app:layout_constraintBottom_toTopOf="@+id/connexion"
        app:layout_constraintTop_toBottomOf="@+id/inscription"
        tools:layout_editor_absoluteX="100dp"
        android:background="@color/colorDark"
        android:layout_alignTop="@+id/connexion"
        android:layout_alignEnd="@+id/textView3"
        android:layout_marginTop="67dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="187dp"
        android:layout_height="2dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/recherchetrajet"
        app:layout_constraintTop_toBottomOf="@+id/connexion"
        tools:layout_editor_absoluteX="100dp"
        android:background="@color/colorDark"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />




</RelativeLayout>


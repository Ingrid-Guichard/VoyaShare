<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.iguichar.voyashare.Pageconnexion">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:background="@color/colorDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.21" />

    <TextView
        android:id="@+id/co"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:text="Connexion"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="65sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/mdp"
        android:layout_width="237dp"
        android:layout_height="53dp"
        android:ems="10"
        android:inputType="text"
        android:text="Mot de passe"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textView2" />

    <Button
        android:id="@+id/connexion"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="301dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Connexion"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_marginTop="39dp"
        android:text="Rester connecté"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/connexion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:layout_below="@+id/mdpoublié"
        android:layout_alignStart="@+id/mdpoublié" />


    <Button
        android:id="@+id/mdpoublié"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="252dp"
        android:layout_height="52dp"
        android:text="Mot de passe oublié"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorbandeau"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/checkBox"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/mdp"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:id="@+id/message"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        android:layout_below="@+id/mdpoublié"
        android:layout_alignStart="@+id/co" />

    <EditText

        android:layout_width="237dp"
        android:layout_height="53dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/mail"
        android:text="e-mail"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_above="@+id/mdp"
        android:layout_alignStart="@+id/mdp"
        android:layout_marginBottom="67dp" />


</RelativeLayout>

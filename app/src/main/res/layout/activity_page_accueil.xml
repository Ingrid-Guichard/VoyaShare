<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.iguichar.voyashare.PageAccueil"
    android:background="@drawable/background1">



    <Button
        android:id="@+id/proposertrajet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:fontFamily="arialBlack"
        android:text="Proposer un trajet"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/recherchertrajet"
        tools:layout_editor_absoluteX="83dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/recherchertrajet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:fontFamily="arialBlack"
        android:text="Rechercher un trajet"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="83dp"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/proposertrajet"
        android:layout_marginTop="96dp" />

    <TextView
        android:id="@+id/question"
        android:layout_width="192dp"
        android:layout_height="76dp"
        android:background="@null"
        android:gravity="center"
        android:text="Voulez-Vous?"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/proposertrajet1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.507"
        tools:layout_editor_absoluteX="96dp"
        android:layout_above="@+id/textView8"
        android:layout_alignEnd="@+id/proposertrajet" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="210dp"
        android:layout_height="2dp"
        android:layout_marginBottom="140dp"
        android:background="@color/colorDark"
        app:layout_constraintBottom_toTopOf="@+id/proposertrajet1"
        app:layout_constraintTop_toBottomOf="@+id/question"
        app:layout_constraintVertical_bias="0.722"
        tools:layout_editor_absoluteX="80dp"
        android:layout_above="@+id/proposertrajet"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="220dp"
        android:layout_height="2dp"
        android:background="@color/colorDark"
        app:layout_constraintBottom_toTopOf="@+id/recherchertrajet1"
        app:layout_constraintTop_toBottomOf="@+id/proposertrajet1"
        app:layout_constraintVertical_bias="0.543"
        tools:layout_editor_absoluteX="83dp"
        android:layout_below="@+id/proposertrajet"
        android:layout_alignEnd="@+id/recherchertrajet" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="220dp"
        android:layout_height="2dp"
        android:background="@color/colorDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recherchertrajet"
        app:layout_constraintVertical_bias="0.362"
        tools:layout_editor_absoluteX="89dp"
        android:layout_alignBottom="@+id/recherchertrajet"
        android:layout_alignStart="@+id/textView9" />



</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context="com.example.iguichar.voyashare.Inscription"
android:clickable="false">

<TextView
    android:id="@+id/txtTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/my_toolbar"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="19dp"
    android:text="Inscription"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:textSize="36sp"
    android:typeface="sans" />

<EditText
    android:id="@+id/txtPrenom"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/txtTitle"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="43dp"
    android:clickable="true"
    android:inputType="text"
    android:textSize="20dp"
    android:text="PrÃ©nom"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:textColor="#000000"
    android:typeface="normal" />

<EditText
    android:id="@+id/txtNom"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/txtPrenom"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="13dp"
    android:clickable="true"
    android:inputType="text"
    android:text="Nom"
    android:textSize="20dp"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:textColor="#000000"
    android:typeface="normal" />

<EditText
    android:id="@+id/txtAge"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/txtNom"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="17dp"
    android:clickable="true"
    android:inputType="text"
    android:text="Age"
    android:textSize="20dp"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:textColor="#000000"
    android:typeface="normal" />

<EditText
    android:id="@+id/txtmdp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/txtAge"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="31dp"
    android:clickable="true"
    android:inputType="text"
    android:text="Mot de Passe"
    android:textSize="20dp"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:textColor="#000000"
    android:typeface="normal" />

<Button
    android:id="@+id/btnContinuer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="55dp"
    android:background="#C03000"
    android:clickable="true"
    android:minHeight="40dp"
    android:text="Continuer"
    android:textAllCaps="false"
    android:textColor="#ffffff"
    android:textSize="20sp"
    android:typeface="normal" />

<android.support.v7.widget.Toolbar
    android:id="@+id/my_toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/colorPrimary"
    android:elevation="4dp"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    android:text="Inscription"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

</RelativeLayout>

